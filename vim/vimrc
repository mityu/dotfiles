{
  var cmd: string
  if IsMac && executable('open')
    cmd = 'open'
  elseif (IsWindows || IsWSL || IsWinUnix) && executable('explorer')
    cmd = 'explorer'
  endif
  if cmd !=# ''
    execute 'command! -bar -nargs=+ -complete=dir Open ' ..
      $'call system("{cmd} " .. shellescape(<q-args>))'
  endif
}

