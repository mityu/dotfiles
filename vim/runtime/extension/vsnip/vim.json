{
    "if": {
        "prefix": "if",
        "body": [
            "if ${1:condition}",
            "\t$0",
            "endif"
        ],
        "description": ":if block"
    },
    "function": {
        "prefix": "function",
        "body": [
            "function! ${1:name}(${2:args}) abort",
            "\t$0",
            "endfunction"
        ],
        "description": ":function block"
    },
    "def": {
        "prefix": "def",
        "body": [
            "def! ${1:name}(${2:args})",
            "\t$0",
            "enddef"
        ],
        "description": ":def block"
    },
    "for": {
        "prefix": "for",
        "body": [
            "for ${1:var} in ${2:list}",
            "\t$0",
            "endfor"
        ],
        "description": ":for block"
    },
    "while": {
        "prefix": "while",
        "body": [
            "while ${1:condition}",
            "\t$0",
            "endwhile"
        ],
        "description": ":while block"
    },
    "augroup": {
        "prefix": "augroup",
        "body": [
            "augroup ${1:group-name}",
            "\t$0",
            "augroup END"
        ],
        "description": ":augroup block"
    },
    "echohl": {
        "prefix": "echohl",
        "body": [
            "echohl ${1:hl-group}",
            "$0",
            "echohl NONE"
        ],
        "description": ":echohl block"
    }
}
